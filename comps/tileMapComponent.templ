package comps

import h "ago/helper"

templ TileMapComponent(tileMap TileMap) {
	<div id="tile-map"
		class={ tileMap.Class() } 
		_="on load wait 0.2s
			then add .loaded to #options
			then add .loaded to #header"
		>
		for _, tile := range tileMap.Tiles {
			for _, tile := range tile {
				@TileComponent(tile)
			}
		}
	</div>
}

func GetHgtClass(hgt int) string {
	return "hght-" + h.Itoa(hgt)
}
