package comps

import h "ago/helper"

templ TileMapComponent(tileMap TileMap) {
	<div id="tileMap" hx-get="/options" hx-trigger="mouseenter once" hx-target="#options" hx-swap="outerHTML">
		for _, tile := range tileMap.Tiles {
			for _, tile := range tile {
				@TileComponent(tile)
			}
		}
	</div>
}

func GetHgtClass(hgt int) string {
	return "hght-" + h.Itoa(hgt)
}
